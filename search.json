---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
                    {%- capture categorias -%}
                    {%- for categoria in post.categories -%}
                    {{ categoria | downcase | replace: ' ', '-' | append: ' ' }}
                    {%- endfor -%}
                    {%- endcapture -%}
      "category" : "{{ categorias }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
                    {% capture src %}
                    {% include get_image_post_src.html %}
                    {% endcapture %}
                    {% assign src = src | strip %}
      "thumbnail": "{{ src }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
